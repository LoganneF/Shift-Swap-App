<!DOCTYPE html>
<html>

<head>
  <%- include("../views/partials/head.ejs") %>
</head>

<body>
  <div class="content mx-auto">
    
    <div class="card mx-auto" id="list-item-1" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">Position: <%=shifts.position%> </h5>
        <h6 class="card-subtitle mb-2 text-muted">Posted by: <%=shifts.name%>  </h6>
        <p class="card-text">Date: <%=shifts.date%></p>
        <p class="card-text">Time: <%=shifts.time%></p>
        <a href="#" class="card-link">Edit Shift</a>
        <!-- make this link edit routes -->
        <form action='/<%=shifts.id%>/edit' method="GET">
          <input type="submit" value="Edit Shift">
      </form>
        <!-- <a href="#" class="card-link">Delete Shift</a> -->
        <!-- make this link delete -->
        <form action="/<%=shifts.id%>?_method=DELETE" method="POST">
          <input type="submit" value="DELETE"/>
      </form>
      </div>
    </div>
</div>
    <%- include("../views/partials/footer.ejs") %>
</body>

</html>